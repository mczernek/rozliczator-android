<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActionBarActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_button"
        android:visibility="visible">

        <fragment
            android:id="@+id/main_fragment"
            android:name="pl.kap11.rozliczator.event.EventsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <View
        android:id="@+id/man_fragment_overlay"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/main_fragment_container"
        android:layout_alignTop="@id/main_fragment_container"
        android:layout_alignStart="@id/main_fragment_container"
        android:layout_alignEnd="@id/main_fragment_container"
        android:background="#000000"
        android:visibility="gone"
        tools:ignore="RtlCompat" />


    <LinearLayout
        android:id="@id/bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bottom_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_fragment_container"
            android:background="#686868"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Add event"
                android:textColor="#E6E6E6"
                android:textSize="25sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/bottom_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

        <TextView
            android:id="@+id/bottom_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:textSize="50sp"
            android:text="Bottom expandable fragment"
            android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>


</RelativeLayout>